<component name="LaunchDarklyTask" extends="Task">
    <interface>
        <field id="user" type="assocarray"/>
        <field id="config" type="assocarray"/>

        <field id="flags" type="assocarray"/>
        <field id="event" type="assocarray" alwaysNotify="true"/>
        <field id="log" type="assocarray" alwaysNotify="true"/>
        <!-- boolean but only used for signalling, value is ignored -->
        <field id="flush" type="bool" alwaysNotify="true"/>
        <field id="track" type="assocarray" alwaysNotify="true"/>
    </interface>

    <script type="text/brightscript" uri="pkg:/components/LaunchDarklyTask.brs"/>

    <script type="text/brightscript" uri="pkg:/source/LaunchDarklyClient.brs"/>
    <script type="text/brightscript" uri="pkg:/source/LaunchDarklyConfig.brs"/>
    <script type="text/brightscript" uri="pkg:/source/LaunchDarklyCrypto.brs"/>
    <script type="text/brightscript" uri="pkg:/source/LaunchDarklyHTTP.brs"/>
    <script type="text/brightscript" uri="pkg:/source/LaunchDarklyLogger.brs"/>
    <script type="text/brightscript" uri="pkg:/source/LaunchDarklySSE.brs"/>
    <script type="text/brightscript" uri="pkg:/source/LaunchDarklyStore.brs"/>
    <script type="text/brightscript" uri="pkg:/source/LaunchDarklyStreamClient.brs"/>
    <script type="text/brightscript" uri="pkg:/source/LaunchDarklyUser.brs"/>
    <script type="text/brightscript" uri="pkg:/source/LaunchDarklyUtility.brs"/>
</component>
